block content 
  h1= title 
 
  form(id='BallonForm', action="/resource/ballons", method="POST") 
    div.form-group 
        label.ballonAttr(for='gas') Ballon gas
        input#ballon_type(type='text', name='gas') 
    div.form-group 
        label.ballonAttr(for='colour') Ballon colour 
        input#size(type='text', name='colour') 
    div.form-group 
        label.ballonAttr(for='count') Ballon count 
        input#cost(type='number', name='count') 
    input(type="submit") 
 
  script. 
